#include "simple_spi_{{id}}.hpp"

bool xpcc::stm32::SpiSimpleMaster{{ id }}::finished = true;

// ----------------------------------------------------------------------------
bool
xpcc::stm32::SpiSimpleMaster{{ id }}::transfer(uint8_t * tx, uint8_t * rx,
		std::size_t length)
{
	if (!isFinished())
		return false;

	finished = false;

	uint_fast8_t tx_byte = 0xff;
	uint_fast8_t rx_byte;

	for (std::size_t i = 0; i < length; i++)
	{
		if (tx) tx_byte = tx[i];

		rx_byte = writeReadBlocking(tx_byte);

		if (rx) rx[i] = rx_byte;
	}

	finished = true;
	return true;
}
